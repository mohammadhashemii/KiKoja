        <image width="100" src="http://162.55.105.137:8080/api/public/dl/aX5iqrp2"></image>
    </frame>
    <frame layout="linear_vertical">
        <frame layout="linear_vertical"  margin_left="15" margin_right="15" id="email">
            <text margin_left="10" margin_right="10" background="white">ایمیل:</text>
